{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "/test_request_resource/{path_level1}/{path_level2}-PUT",
    "type": "object",
    "additionalProperties": true,
    "properties": {
        "httpMethod": {
            "const": "PUT",
            "description": "the ReST method(s) type allowed for this API",
            "type": "string"
        },
        "headers": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "content-type": {
                    "type": "string",
                    "enum": [
                        "application/json"
                    ]
                },
                "isBase64Encoded": {
                    "type": "boolean",
                    "enum": [
                        false
                    ],
                    "description": "e.g. allow only not encoded requests"
                },
                "requestContext": {
                    "type": "object"
                }
            },
            "required": [
                "content-type"
            ]
        },
        "body": {
            "type": "object",
            "properties": {
                "body_key1": {
                    "type": "string",
                    "description": "containing only a string"
                },
                "body_key2": {
                    "type": "object",
                    "description": "containing a not further specified dictionary"
                }
            },
            "required": [
                "body_key1"
            ],
            "additionalProperties": false
        },
        "pathParameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "path_level1": {
                    "type": "string",
                    "enum": [
                        "path_value1",
                        "path_value2"
                    ],
                    "description": "key name as specified in endpoint config, first level"
                },
                "path_level2": {
                    "type": "string",
                    "description": "key name as specified in endpoint config, second level"
                }
            },
            "required": [
                "path_level1",
                "path_level2"
            ]
        },
        "queryParameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "key1": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "key1 argument"
                },
                "key2": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "key2 argument"
                }
            },
            "required": [
                "key2"
            ]
        }
    },
    "required": [
        "body",
        "headers",
        "httpMethod",
        "pathParameters",
        "queryParameters"
    ],
    "version": "1.0.0",
    "description": "Basic API\n---\nsome description"
}